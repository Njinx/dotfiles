alias ls="ls --color=auto --group-directories-first"
alias grep="grep --color=auto"
alias diff="diff --color=auto"
alias ip="ip -color=auto"
alias ll="ls -l"
alias la="ls -a"
alias lla="ls -la"
alias urxvt-reload="xrdb $HOME/.Xresources"
alias getwinclass="xprop WM_CLASS"
alias rsync="rsync -avs --progress"
alias zsource="source $HOME/.zshrc"
alias pubip="curl http://ipecho.net/plain ; echo"
alias clip="xclip -selection c"
alias sysinfo="inxi -Fxxx"
alias firefox="firefox-developer-edition"
alias yt2mp3="yt-dlp --extract-audio --audio-format mp3"
alias yt2mp4="yt-dlp -f \"bestvideo[ext=mp4]+bestaudio[ext=m4a]/best[ext=mp4]/best\""
alias thewisecrab="rustc --explain "
alias http-server="$HOME/node_modules/http-server/bin/http-server -c-1"
alias fuckingupdate="pacman -Syyu --overwrite \"*\""
alias define="zdict -dt wiktionary"
alias reoob="reboot"
alias dl="dirs -v"
alias fixterm="print '\e(0\e)B'"
alias els="exa"
alias xlog="tail -f /var/log/Xorg.0.log"
alias gitlog="git log --pretty=oneline --abbrev-commit"
alias mutt="neomutt"
alias history="history 0"
alias psed="perl -p"
alias exposedp='sudo ufw status | cut -d" "  -f1 | perl -p -e "s/(?:\/\w*)//\" | xargs -I "%" sh -c "sudo ss -plunt | grep -E \":%\s\""'
